# ==================== Application Configuration ====================
APP_NAME="RPA Scraping System"
DEBUG=False
API_PREFIX="/api/v1"

# ==================== Database Configuration ====================
# PREENCHER: Configurar credenciais do PostgreSQL
# Para produção com GitHub Actions: Configure como secret no repositório (DATABASE_URL)
# Para desenvolvimento local com Docker Compose: postgresql://rpa_user:rpa_password@postgres:5432/rpa_db
# Nota: 5432 é a porta padrão do PostgreSQL
DATABASE_URL=postgresql://PREENCHER_USER:PREENCHER_PASSWORD@PREENCHER_HOST:5432/PREENCHER_DB
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ==================== RabbitMQ Configuration ====================
# PREENCHER: Configurar credenciais do RabbitMQ
# Para produção com GitHub Actions: Configure como secrets no repositório (RABBITMQ_HOST, RABBITMQ_USER, etc.)
# Para desenvolvimento local com Docker Compose: rabbitmq (host), rpa_user (user), rpa_password (password)
# Nota: 5672 é a porta padrão do RabbitMQ
RABBITMQ_HOST=PREENCHER_HOST
RABBITMQ_PORT=5672
RABBITMQ_USER=PREENCHER_USER
RABBITMQ_PASSWORD=PREENCHER_PASSWORD
RABBITMQ_QUEUE_HOCKEY=scraper_hockey_queue
RABBITMQ_QUEUE_OSCAR=scraper_oscar_queue

# ==================== Scraper Configuration ====================
# Selenium
SELENIUM_HEADLESS=True
SELENIUM_TIMEOUT=30

# HTTP Requests
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
SCRAPER_DELAY=1.0

# URLs dos sites para scraping (extraído de REQUIREMENTS.md)
HOCKEY_URL=https://www.scrapethissite.com/pages/forms/
OSCAR_URL=https://www.scrapethissite.com/pages/ajax-javascript/

# ==================== Development/Production Settings ====================
# Para ambiente de desenvolvimento local com Docker Compose, use:
# DATABASE_URL=postgresql://rpa_user:rpa_password@db:5432/rpa_db
# RABBITMQ_HOST=rabbitmq
# RABBITMQ_USER=rpa_user
# RABBITMQ_PASSWORD=rpa_password
