# ==================== Application Configuration ====================
APP_NAME="RPA Scraping System"
DEBUG=False
API_PREFIX="/api/v1"

# ==================== Database Configuration ====================
# PREENCHER: Configurar credenciais do PostgreSQL
DATABASE_URL=postgresql://PREENCHER_USER:PREENCHER_PASSWORD@PREENCHER_HOST:5432/PREENCHER_DB
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ==================== RabbitMQ Configuration ====================
# PREENCHER: Configurar credenciais do RabbitMQ
RABBITMQ_HOST=PREENCHER_HOST
RABBITMQ_PORT=5672
RABBITMQ_USER=PREENCHER_USER
RABBITMQ_PASSWORD=PREENCHER_PASSWORD
RABBITMQ_QUEUE_HOCKEY=scraper_hockey_queue
RABBITMQ_QUEUE_OSCAR=scraper_oscar_queue

# ==================== Scraper Configuration ====================
# Selenium
SELENIUM_HEADLESS=True
SELENIUM_TIMEOUT=30

# HTTP Requests
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
SCRAPER_DELAY=1.0

# PREENCHER: URLs dos sites para scraping
HOCKEY_URL=https://PREENCHER_URL_HOCKEY
OSCAR_URL=https://PREENCHER_URL_OSCAR

# ==================== Development/Production Settings ====================
# Para ambiente de desenvolvimento local com Docker Compose, use:
# DATABASE_URL=postgresql://rpa_user:rpa_password@db:5432/rpa_db
# RABBITMQ_HOST=rabbitmq
# RABBITMQ_USER=rpa_user
# RABBITMQ_PASSWORD=rpa_password
